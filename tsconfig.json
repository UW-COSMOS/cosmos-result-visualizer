{
  "emitDeclarationOnly": true,
  "compilerOptions": {
    "moduleResolution": "node",
    "declaration": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "declarationDir": "dist/types",
    "typeRoots": [
      "node_modules/@types"
    ],
    "baseUrl": ".",
    "paths": {
        "~/*": ["frontend-shared/src/*"]
    }
  },
  "include": [
    "frontend-shared/src/**/*",
    "apps/*/src/**/*"
  ]
}
