*
  box-sizing border-box

body
  margin 0

.instructions
  font-style italic

.main-toaster
  margin-top 50px
  .error-toast
    h4
      margin-top 0
    pre
      background-color #ffeeee
      border 1px solid #ffaaaa
      color #880000
      padding 10px
      border-radius 3px
      max-height 400px

.image-container
  margin 1em
  outline 0.5em solid #eee
  position relative
  div.overlay
    top 0
    left 0
    position absolute

div.rect
  position absolute
  border 2px solid black
  cursor pointer
  &.draggable
    cursor move
  div.handles
    div
      background rgba(0,0,0,0)
      &:hover
        background rgba(0,0,0,0.5)
      position absolute
    .left, .right
      cursor: ew-resize
    .top, .bottom
      cursor: ns-resize
    .top.right, .left.bottom
      cursor: nesw-resize
    .top.left, .right.bottom
      cursor: nwse-resize
  div.tag-name
    position absolute
    font-weight 600
    top -16px
    font-size 12px
  div.rect-controls
    position absolute
    background-color #eee
    border 1px solid #aaa
    border-radius 3px
    bottom -50px
    width 180px
    .select-box
      width 128px
      text-align left
    &>*
      margin 5px
