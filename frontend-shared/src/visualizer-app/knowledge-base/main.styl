#knowledge-base-filter
  margin 1em auto
  max-width 60em
  margin-top -50px
  position relative
  padding 0 1em

  .bp3-navbar
    align-items: center;
    .bp3-navbar-group.bp3-align-left
      flex 0
    padding-right 5px

  .bp3-navbar-heading
    margin-right 10px

  .search-interface
    flex-grow 1
    .main-search
      margin-bottom 0

  div.pagination-controls
    display flex
    flex-direction row
    justify-content space-between
    margin-top 1em

  .main-search
    margin-bottom 1em

  div.model-extraction
    padding-top 1em
    margin 1em 0 2em
    display flex
    flex-direction column
    h2
      font-size 14px
    div.extracted-entity>.main
      &>div.kb-image-container
        flex 2
        img
          max-height 20em
      &>*
        flex 1
      div.text
        margin-left 1em
        font-size 10px
        max-width 40%
        overflow hidden
      display flex
      flex-direction row
      span.entity-type
        font-weight 400
        color #888
        font-style italic
    &>div
      flex 1
      position relative
      img
        max-width 100%

a.link-card.gdd-article
  text-decoration none
  margin 0em 0 1.5em
  padding 0.5em 1em
  .title
    font-weight 500
    font-style italic
  .journal, .year
    font-weight 600

div.gdd-article
  padding 0.6em 1em
  &:hover
    color inherit
    text-decoration none
  .title
    font-style italic
  .journal, .volume
    font-weight bold
  .doi-title
    text-transform uppercase
    font-size 0.8em
    font-weight bold
    color #444

div.related-terms
  dt
    clear both
  dt, dd
    float left
    margin-right 0.20em
  dt
    font-weight bold
  ::after
    content: ""
    display: block
    clear: both

.filter-controls .inner
  margin-bottom -1em
  h3, h4
    margin-top 0
    margin-bottom 0.2em
  .top-row
    display flex
    flex-direction row
  .type-selector, .search-details .bp3-collapse-body
    display flex
    flex-grow 1
    flex-direction row
    margin-bottom 1em
    &>*
      margin-right 1em
    margin-right -1em
    align-items: baseline

  .type-selector
    display flex
    flex-direction row

  .threshold-controls
    margin-bottom -1em
    flex-grow 1
    .bp3-form-content
      margin 0 2em

  .bp3-form-group
    display flex
    .bp3-label
      min-width 7em
    .bp3-form-content
      flex-grow 1
    margin-bottom 5px
