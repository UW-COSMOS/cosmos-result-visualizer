{
  "emitDeclarationOnly": true,
  "compilerOptions": {
    "moduleResolution": "node",
    "declaration": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "declarationDir": "dist/types",
    "outDir": "dist/lib",
    "baseUrl": "./",
    "typeRoots": [
      "node_modules/@types",
      "@types"
    ],
    "paths": {
        "~/*": ["src/*"]
    }
  },
  "include": [
    "src"
  ]
}
